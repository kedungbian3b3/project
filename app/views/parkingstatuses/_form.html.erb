<%= form_with(model: parkingstatus) do |form| %>
<% if parkingstatus.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(parkingstatus.errors.count, "error") %> prohibited this parkingstatus from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% parkingstatus.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :staff_id, class: label_class %>
        <%= form.select :staff_id, options_from_collection_for_select( Staff.all, 'id', 'name', selected = parkingstatus.staff_id), class: label_class %>

      </div>
  <div class="mb-6">
        <%= form.label :available, class: label_class %>
          <%= form.check_box :available, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :slotid, class: label_class %>
          <%= form.number_field :slotid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :parkingfee_id, class: label_class %>
        <%= form.select :parkingfee_id, options_from_collection_for_select( Parkingfee.all, 'id', 'numtime', selected = parkingstatus.parkingfee_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :paymentmethod_id, class: label_class %>
        <%= form.select :paymentmethod_id, options_from_collection_for_select( Paymentmethod.all, 'id', 'method', selected = parkingstatus.paymentmethod_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :customer_id, class: label_class %>
        <%= form.select :customer_id, options_from_collection_for_select( Customer.all, 'id', 'name', selected = parkingstatus.customer_id), class: label_class %>

      </div>
  <div class="mb-6">
        <%= form.label :car, class: label_class %>
          <%= form.text_area :car, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :numberplate, class: label_class %>
          <%= form.text_area :numberplate, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.datetime_field :date, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if parkingstatus.persisted? %>
<%= link_to "Cancel", parkingstatus, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", parkingstatuses_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
