<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Parkingfee</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to parkingfees_path, class: button_class(theme: "transparent") do %>
      All Parkingfees
      <% end %>
      <%= link_to edit_parkingfee_path(@parkingfee), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Numtime:</p>
        <p><%= @parkingfee.numtime %></p>
      </li>
      <li>
        <p class="font-semibold">Money:</p>
        <p><%= @parkingfee.money %></p>
      </li>
  </ul>
</div>
